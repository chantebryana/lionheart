					<% db.each("SELECT id, dt FROM user", function(err, row) { %>
						<li><%= row.id %> | <%= row.dt %></li>
					<% }); %>
				</ul>


        </div>
    </main>

    <footer>
        <% include ../partials/footer %>
    </footer>
    
</body>
